From 1e2130842aacb90ca2c567d230d1e3add101cf02 Mon Sep 17 00:00:00 2001
From: Felix Hammarstrand <felix.hammarstrand@flir.se>
Date: Fri, 10 Jan 2020 10:18:56 +0100
Subject: [PATCH] ec201 dtb: enable usb phy charger detection, set pmic system
 regulation voltage to 4.3V

---
 arch/arm/boot/dts/imx7ulp-ec201.dtsi | 2 ++
 1 file changed, 2 insertions(+)

diff --git a/arch/arm/boot/dts/imx7ulp-ec201.dtsi b/arch/arm/boot/dts/imx7ulp-ec201.dtsi
index 3c953d4..052dc56 100644
--- a/arch/arm/boot/dts/imx7ulp-ec201.dtsi
+++ b/arch/arm/boot/dts/imx7ulp-ec201.dtsi
@@ -412,6 +412,7 @@
 
 		charger {
 			compatible = "fsl,pf1550-charger";
+			fsl,min-system-microvolt = <4300000>;
 		};
 
 		regulators {
@@ -706,6 +707,7 @@
 	srp-disable;
 	hnp-disable;
 	adp-disable;
+	phy-charger-detection;
 	status = "okay";
 };
 
