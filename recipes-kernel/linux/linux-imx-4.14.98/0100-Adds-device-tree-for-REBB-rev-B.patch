+/*  PMIC */
+&lpi2c5 {
+        #address-cells = <1>;
+	#size-cells = <0>;
+	pinctrl-names = "default", "sleep";
+	pinctrl-0 = <&pinctrl_lpi2c5>;
+	pinctrl-1 = <&pinctrl_lpi2c5_sleep>;
+	status = "okay";
+
